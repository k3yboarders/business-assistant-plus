@{
	ViewData["Title"] = "Kalkulator podatkowy";
	Layout = "_LayoutCalculator";
}

<div class="container-fluid bg-primary">
      <div class="container align-middle">
	<h1 class="text-primary text-white">Kalkulator podatkowy</h1>
	  <label for="pit-input" class="lead text-white text-start fw-bold">Dochód w roku podatkowym:</label>
	  <input type="text" id="pit-input">

	  <label for="polski-lad-modes" class="mt-2 lead text-white text-start fw-bold">Sposób rozliczania:</label>
	  <select name="taxation-modes" id="polski-lad-modes">
	    <option value="polski-lad" selected>"Polski Ład"</option>
	    <option value="polski-lad-2">"Polski Ład 2.0"</option>
	  </select>


	  <label for="taxation-types" class="mt-2 lead text-white text-start fw-bold">Sposób opodatkowania:</label>
	  <select name="taxation-types" id="taxation-types">
	    <option value="standard" selected>Standardowa skala podatkowa</option>
	    <option value="line">Podatek liniowy</option>
	    <option value="lumpSum">Ryczałt ewidencjonowany</option>
	    <option value="taxationCard">Karta Podatkowa</option>
	  </select>


	  <label for="healthcare-reduction-input" class="mt-2 lead text-white text-start fw-bold" style="display: none;">Odliczenie składki zdrowotnej od przychodu/dochodu</label>
	  <input type="checkbox" id="healthcare-reduction-input" style="display: none;">

	  <label for="middle-class-reduction-checkbox" class="mt-2 lead text-white text-start fw-bold">Ulga dla klasy średniej</label>
	  <input type="checkbox" id="middle-class-reduction-checkbox">

	  <label for="company-types" class="mt-2 lead text-white text-start fw-bold" style="display: none;">Rodzaj działalności/świadczonych usług:</label>
	  <select name="company-types" id="company-types" style="display: none;">
	    <option value="17" selected>Lekarz</option>
	    <option value="17">Lekarz stomatologii</option>
	    <option value="17">Weterynarz</option>
	    <option value="17">Technik dentystyczny</option>
	    <option value="17">Felczer, położna, pielęgniarka</option>
	    <option value="17">Tłumacz</option>
	    <option value="17">Nauczyciel korepetytor</option>
	    <option value="15">Usługi parkingowe</option>
	    <option value="15">Usługi reklamowe/badania opinii publicznej</option>
	    <option value="15">Usługi hotelarskie</option>
	    <option value="15">Usługi fotograficzne</option>
	    <option value="15">Reprodukcja komputerowych nośników informacji</option>
	    <option value="15">Obsługa central radio-taxi</option>
	    <option value="15">Pośrednictwo w sprzedaży hurtowej</option>
	    <option value="15">Pośrednictwo w sprzedaży hurtowej samochodów osobowych oraz części i akcesoriów do nich</option>
	    <option value="15">Pośrednictwo w sprzedaży motocykli oraz części i akcesoriów do nich</option>
	    <option value="14">Usługi w zakresie opieki zdrowotnej</option>
	    <option value="14">Usługi architektoniczne i inżynierskie</option>
	    <option value="14">Usługi w zakresie specjalistycznego projektowania</option>
	    <option value="12">Wydawanie pakietów gier komputerowych , z wyłączeniem publikowania gier komputerowych w trybie on-line</option>
	    <option value="12">Wydawanie pakietów oprogramowania systemowego</option>
	    <option value="12">Wydawanie pakietów oprogramowania użytkowego</option>
	    <option value="12">Wydawanie oprogramowania komputerowego pobieranego z Internetu</option>
	    <option value="12">Usługi doradztwa w sprawie sprzętu komputerowego</option>
	    <option value="12">Usługi związane z oprogramowaniem</option>
	    <option value="12">Usługi związane z doradztwem w zakresie oprogramowania</option>
	    <option value="12">Usługi w zakresie instalowania oprogramowania</option>
	    <option value="12">Usługi związane z zarządzaniem siecią i systemami informatycznymi</option>
	    <option value="8.5">Wynajem nieruchomości</option>
	    <option value="8.5">Świadczenie usług związanych z zakwaterowaniem</option>
	    <option value="8.5">Badania naukowe</option>
	    <option value="8.5">Wynajem środków transportu</option>
	    <option value="8.5">Gastronomia (w zakresie sprzedaży napojów z zawartością alkoholu powyżej 1.5%)</option>
	    <option value="8.5">Zwalczanie pożarów i zapobieganie im</option>
	    <option value="8.5">Edukacja</option>
	    <option value="8.5">Biblioteka, archiwum, muzeum</option>
	    <option value="5.5">Prowadzenie działalności wytwórczej</option>
	    <option value="5.5">Budownictwo</option>
	    <option value="5.5">Sprzedaż biletów, żetonów, znaczków pocztowych</option>
	    <option value="3">Gastronomia (z wyjątkiem alkoholu)</option>
	    <option value="3">Handel</option>
	    <option value="3">Rybołóstwo</option>
	    <option value="3">Produkcja zwierzęca</option>
	    <option value="2">Wytwór produktów roślinnych i zwierzęcych w sposób inny niż przemysłowy</option>
	  </select>

	  <label for="vat-percentages" class="mt-2 lead text-white text-start fw-bold">Stawka podatku VAT:</label>
	  <select name="taxation-types" id="vat-percentages">
	    <option value="23">23%</option>
	    <option value="8">8%</option>
	    <option value="5">5%</option>
	    <option value="0">0%</option>
	  </select>
	  
	  <label for="sales-income" class="mt-2 lead text-white text-start fw-bold">Przychód Netto ze sprzedaży: </label>
	  <input type="text" id="sales-income">

	  <label for="property-tax-cost" class="mt-2 lead text-white text-start fw-bold">Koszt podatku od nieruchomości: </label>
	  <input type="text" id="property-tax-cost">

	  <label for="civil-legal-tax-cost" class="mt-2 lead text-white text-start fw-bold">Wysokość podatku od czynności cywilno prawnych: </label>
	  <input type="text" id="civil-legal-tax-cost">

	<button class="confirmation-button mt-2 btn-success rounded fw-bold">Zatwierdź</button>
      <p class="pit-value-paragraph lead fw-bold text-white"><abbr>PIT</abbr>: </p>
      <p class="healthcare-value-paragraph lead fw-bold text-white">Składka zdrowotna roczna: </p>
      <p class="vat-value-paragraph lead fw-bold text-white">VAT: </p>
      <p class="property-value-paragraph lead fw-bold text-white">Podatek od nieruchomości: </p>
      <p class="civil-legal-value-paragraph lead fw-bold text-white">Podatek od czynności cywilno-prawnych: </p>
      </div>
    </div>